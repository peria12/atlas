@model IEnumerable<GlobalNetApps.AtlasFlightSchedule.Models.LOFViewModel>
@using GridMvc.Html

    @Html.Grid(Model).Columns(columns =>
{
    columns.Add().Titled("Flight No")
                    .Encoded(false)
                    .Sanitized(false)
                    .RenderValueAs(d =>
                    @<b>
                        @Html.ActionLink(d.FltNo, "GetFlight", "Flight", new { SeqNo = d.FltSeqNo, isHotel=false },"")
                    </b>);
    columns.Add(c => c.DeptTime).Titled("Depart Dt & Tm").Format("{0:MM/dd/yyyy}");
    columns.Add(c => c.DeptStation).Titled("Depart Sta");
    columns.Add(c => c.ArrivalStation).Titled("Arrival Sta");
    columns.Add(c => c.ArrivalTime).Titled("Arrival Dt & Tm").Format("{0:MM/dd/yyyy}");
    columns.Add(c => c.GroundTime).Titled("Grnd Tm").Format("{0:MM/dd/yyyy}");
    columns.Add(c => c.FltStatus).Titled("Status");
})





